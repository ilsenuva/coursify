    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<% flash.each do |name, msg| %>
       <%= content_tag(:div, msg, class: "flash " + name) do %>
         <div><%= msg %></div>     
       <% end %>
    <% end %>
    <% if admin_signed_in? %>
      <%= link_to "Salir", destroy_admin_session_path %><br/><br/>
    <% end %>
     <% if user_signed_in? %>
      <%= link_to "Salir", destroy_user_session_path %><br/><br/>
    <% else %>
      <%= link_to "Iniciar SesiÃ³n", new_user_session_path %><br/><br/>
    <% end %>
    <%= yield %>

  </body>
</html>
